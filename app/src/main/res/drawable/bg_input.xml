<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ENFOCADO -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#26263A"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#7C6BFF"/>
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <!-- NORMAL -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1F1F2E"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="1dp"
                android:color="#3A3A55"/>
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp"/>
        </shape>
    </item>

</selector>
