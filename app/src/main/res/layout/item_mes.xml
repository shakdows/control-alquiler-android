<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#2AFFFFFF"
    app:cardBackgroundColor="#151522">

    <LinearLayout
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMes"
            android:text="2025-01"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvEstado"
            android:text="Pendiente: S/ 0.00"
            android:textSize="13sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/inPago"
            android:layout_marginTop="10dp"
            android:hint="Monto pagado"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textColorHint="#90FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnGuardarPago"
            android:text="GUARDAR PAGO"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
